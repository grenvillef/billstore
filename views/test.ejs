<html>
	<head>
		<title>Welcome to BillStore</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="stylesheet" href="/css/main.css" />
	</head>
	<body>

		<!-- Header -->
			<header id="header">
				<div class="inner">
					<a href="/invoiceOverview" class="logo"><strong>BillStore</strong></a>
					<nav id="nav">
						<a href="/invoiceOverview">Home</a>
						<a href="/about">About</a>
						<a href="/logout">Logout</a>
					</nav>
					<a href="navPanel" class="navPanelToggle"><span class="fa fa-bars"></span></a>
				</div>
			</header>

		<!-- Banner -->
			<section id="banner">
				<div class="inner">
					<header>
						<h1>Welcome :</h1><!--%= req.user[0].CustFirstName %-->
					</header>

					<div class="flex ">

						<div>
							<span class="icon fa-file-text-o"></span>
							<h3> View your invoices</h3>
							<p>Click here to see a complete list of your invoices</p>
						</div>


						<div>
							<span class="icon fa-upload"></span>
							<h3><a href="/uploadInvoice">Upload a new invoice</a></h3>
						</div>

					</div>

				</div>
			</section>


	         <section id="invoices" class="wrapper align-center">
                                <div class="inner">
                                       <div class="flex flex-2">

			                <h3> Here is a list of your Invoices </h3>

                                        <table class="table table-inverse">
                                                      <thead>
                        	                             <tr>
                                                                 <th>Invoice Number</th>
                                                                  <th>Transaction Date</th>
                                                                  <th>Currency</th>
                                                                  <th>Amount</th>

                                                            </tr>
                                                      </thead>
                                               <tbody>
						 <% for(var i=0; i < invoices.length ; i++) { %>

						<tr>
							<td><%= invoices[i].InvoiceNumber %> </td>
							<td><%= invoices[i].InvoiceDate %> </td>
                                                        <td><%= invoices[i].CurrencyCode %></td>
                                                          <td><%= invoices[i].TotalAmount %></td>
                                              	
						 </tr>
						<% } %>
	                                       </tbody>

	                                </div>
                                </div>
                        </section>

	</body>
</html>
