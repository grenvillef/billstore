						</div>


						<div>
							<span class="icon fa-upload"></span>
							 <h3><a href="/uploadInvoice">Upload a new invoice</a></h3>
						</div>

					</div>

					<footer>
						<a href="#" class="button">New to BillStore? Click here to get started</a>
					</footer>
				</div>
			</section>


		<!-- Three -->
			<section id="three" class="wrapper align-center">
				<div class="inner">
                                       <div class="flex flex-2">

					<h3> Here are the latest transactions on your bank account </h3>

<						<table class="table table-inverse">
      							<thead>
        							<tr>
							          <th>Bank Transaction Reference</th>
							          <th>Bank Name</th>
							          <th>Transaction Date</th>
							          <th>Amount</th>
							          <th>Currency</th>
							          <th>Transaction Type</th>

       								 </tr>
						      </thead>

					       <tbody>
        					<% for(var i=0; i < transactionDetails.length; i++) { %>
					       <tr>

         <td><%= BankTransactions[i].BankTransactionId %></td>
         <td><%= BankTransactions[i].BankCode %></td>
         <td><%= BankTransactions[i].TransactionDate %></td>
         <td><%= BankTransactions[i].Amount %></td>
         <td><%= BankTransactions[i].CurrencyCode %></td>
         <td><%= BankTransactions[i].TransactionType %></td>


       						</tr>
    						<% } %>
					      </tbody>



				</div>
				</div>
			</section>


