<html>
	<head>
		<% include ./partials/header %>
	</head>
	<body>
		<% include ./partials/mainBanner %>


	         <section id="invoices" class="wrapper align-center">
                                <div class="inner">
                                       <div class="flex flex-2">

			                <h3> Here is a list of your Invoices </h3>

                                        <table class="table table-inverse">
                                                      <thead>
                        	                             <tr>
                                                                 <th>Invoice Number</th>
                                                                  <th>Transaction Date</th>
                                                                  <th>Currency</th>
                                                                  <th>Amount</th>
                                                                  <th>Invoice Scan</th>

                                                            </tr>
                                                      </thead>
                                               <tbody>
                                                <% for(var i=0; i < invoices.length; i++) { %>
                                               	<tr>
						         <td><a href = '/invoiceDetails/<%= invoices[i].InvoiceId %>'><%= invoices[i].InvoiceNumber %> </td>
				        		 <td><%= invoices[i].InvoiceDate.toDateString() %></td>
				         		<td><%= invoices[i].CurrencyCode %></td>
				       			  <td><%= invoices[i].TotalAmount %></td>
							  <td> <span class="icon fa-file-text-o" onclick="openNav()"></span> </td>
                                              	 </tr>
                                                <% } %>
	                                       </tbody>

	                                </div>
                                </div>
                </section>

			<div id="myNav" class="overlay">

				<a href="javascript:void(0)" class="btnclose" onclick="closeNav()">[ X ] Close</a>

				  <!-- Button to close the overlay navigation -->

				<div class="overlay-content">

					<img src="/images/invoiceScan_1_7.jpg">
				</div>

			</div>


		<!-- Footer -->
		<footer>
			<% include ./partials/footer %>
		</footer>


	</body>

<!-- Use any element to open/show the overlay navigation menu -->


<script>
function openNav() {
    document.getElementById("myNav").style.width = "100%";
}
function closeNav() {
    document.getElementById("myNav").style.width = "0%";
}
</script>


</html>
