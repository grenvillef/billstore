	<body>

		<!-- Header -->
			<header id="header">
				<div class="inner">
					<a href="/invoiceOverview" class="logo"><strong>BillStore</strong></a>
					<nav id="nav">
						Welcome,<%= locvarCustFirstName %> 
						<a href="/invoiceOverview">Home</a>
						<a href="/about">About</a>
