					</nav>
					<a href="navPanel" class="navPanelToggle"><span class="fa fa-bars"></span></a>
				</div>
			</header>

		<!-- Banner -->
			<section id="banner">
				<div class="inner">
					<header>
						<h1>Welcome,<%= locvarCustFirstName %> </h1>
					</header>

					<div class="flex ">

						<div>
							<span class="icon fa-file-text-o"></span>
							<h3><a href="/invoiceOverview">View your invoices</a></h3>
							<p>Click here to see a complete list of your invoices</p>
						</div>


						<div>
							<span class="icon fa-upload"></span>
							<h3><a href="/uploadInvoice">Upload a new invoice</a></h3>
						</div>

					</div>

				</div>
			</section>


	         <section id="invoices" class="wrapper align-center">
                                <div class="inner">
                                       <div class="flex flex-2">

			                <h3> Here is a list of your Invoices </h3>

                                        <table class="table table-inverse">
                                                      <thead>
                        	                             <tr>
                                                                 <th>Invoice Number</th>
                                                                  <th>Transaction Date</th>
                                                                  <th>Currency</th>
                                                                  <th>Amount</th>

                                                            </tr>
                                                      </thead>
                                               <tbody>
                                                <% for(var i=0; i < invoices.length; i++) { %>
                                               	<tr>
						         <td><a href = '/invoiceDetails/<%= invoices[i].InvoiceId %>'><%= invoices[i].InvoiceNumber %> </td>
				        		 <td><%= invoices[i].InvoiceDate.toDateString() %></td>
				         		<td><%= invoices[i].CurrencyCode %></td>
				       			  <td><%= invoices[i].TotalAmount %></td>
                                              	 </tr>
                                                <% } %>
	                                       </tbody>

                                </div>
                                </div>
                        </section>

