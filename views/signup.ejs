								<option value="BE">Belgium</option>
								<option value="DE">Germany</option>
								<option value="FR">France</option>
								<option value="UK">United Kingdom</option>
							</select>
                                                 </div>



                                                <div class="form-group">
                                                      <label><font color="white">Zip Codes</font></label>
                                                        <input type="text" class="form-control" name="CustZipCode">
                                                 </div>



                                                <div class="form-group">
                                                      <label><font color="white">City</font></label>
                                                        <input type="text" class="form-control" name="CustCity">
                                                 </div>



                                                <div class="form-group">
                                                      <label><font color="white">State</font></label>
                                                        <input type="text" class="form-control" name="CustState">
                                                 </div>

                                                <div class="form-group">
                                                      <label><font color="white">Customer Type</font></label>

  					 		<select name="CustType">
                                                                <option value="NL">Basic</option>
                                                                <option value="BE">Premium</option>
                                                        </select>
                                                 </div>


					        <div class="form-group">
						      <label><font color="white">Create a Password *</font></label>
						            <input type="password" class="form-control" name="PASSWORD" required>
					        </div>
					        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
				     </form>


					</div>

